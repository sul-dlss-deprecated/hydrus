<%- @page_title = application_name -%>

<%- if current_user %>
  <div class="row dashboard">
    <div class="span7">
      <%= render :partial=>'home_intro' %>
    </div>
    <div class="span4 offset1">
      <%= render :partial=>'home_more_info' %>
    </div>
  </div>
  <div class="row">
    <div class="span12" id="dashboard">
      <%= render :partial=>'home_dashboard' %>
    </div>
  </div>
<%- else -%>
  <div class="row">
    <div class="span7" id="home_text">
      <%= render :partial=>'home_intro' %>
      <%= render :partial=>'home_text' %>
    </div>
    <div class="span4 offset1 promotion">
      <%= render :partial=>'home_promotion_links' %>
      <%= render :partial=>'home_more_info' %>
    </div>
  </div>
<%- end -%>

