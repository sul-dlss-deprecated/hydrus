<ul class="breadcrumb">
  <li><%= link_to 'Home', root_path%></li>
  <% if @fobj %>
    <% if @fobj.is_collection? %>
      <li><span class="divider">/</span> <%= truncate(title_text(@fobj)) %></li>
    <% else %>
      <li><span class="divider">/</span> <%= link_to truncate(title_text(@fobj.collection)), hydrus_collection_path(@fobj.collection)%> </li>
      <li><span class="divider">/</span> <%= "#{truncate(title_text(@fobj))} (#{@fobj.status_label})"%></li>
    <% end %>
  <% end %>
</ul>
