<div id="ajax-modal" class="modal fade" tabindex="-1"></div>

<div id="loading-message" class="hidden">
    &nbsp;&nbsp;&nbsp;Working, please wait...&nbsp; <%= image_tag 'ajax-loader.gif'%>&nbsp;&nbsp;&nbsp;
</div>

<div id="flash-notices" class="row">
  <% if flash[:notice] %>
    <div class="col-sm-8 col-sm-offset-2">
      <div class="alert alert-info">
        <button class="close" data-dismiss="alert">×</button>
        <%= flash[:notice] %>
      </div>
    </div>
  <% end %>

  <% if flash[:warning] || flash[:alert] %>
    <div class="col-sm-8 col-sm-offset-2">
      <div class="alert">
        <button class="close" data-dismiss="alert">×</button>
        <%= flash[:warning] %>
        <%= flash[:alert] %>
      </div>
    </div>
  <% end %>
  <% if flash[:error] %>
    <div class="col-sm-8 col-sm-offset-2">
      <div class="alert alert-error">
        <button class="close" data-dismiss="alert">×</button>
        <%= flash[:error] %>
      </div>
    </div>
  <% end %>
</div>

