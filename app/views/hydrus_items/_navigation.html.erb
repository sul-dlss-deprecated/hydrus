  <% if show_item_edit(@fobj) %>
    <li<%= " class='active'" if ["edit", "update"].include?(params[:action]) %>><%= link_to(edit_item_text(@fobj), edit_polymorphic_path(@fobj)) %></li>
  <% end %>
