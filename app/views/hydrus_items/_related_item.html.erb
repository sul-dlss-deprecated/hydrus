<div class="destroy-set">
  <div class="row related-item field-group">
    <%= hydrus_form_label do  %>
      <%= label :"hydrus_item", :"related_item_title_#{index}", "Link title" %>
    <%- end -%>
    <%= hydrus_form_value do -%>
      <%= text_field_tag :"hydrus_item[related_item_title[#{index}]]", hydrus_strip(@document_fedora.related_item_title[index.to_i]) %>
      <%= link_to('<i class="icon-trash"></i>'.html_safe, destroy_hydrus_item_value_path(:term=>"relatedItem", :term_index=>index, :type=>"related_item"), :class=>"delete-node btn", :id=>"remove_relatedItem_#{index}") %>
    <%- end -%>
  </div>
  <div class="row related-item field-group">
    <%= hydrus_form_label do  %>
      <%= label :"hydrus_item", :"related_item_url_#{index}", "URL" %>
    <%- end -%>
    <%= hydrus_form_value do -%>
      <%= text_field_tag :"hydrus_item[related_item_url[#{index}]]", hydrus_strip(@document_fedora.related_item_url[index.to_i]) %>
    <%- end -%>
  </div>
</div>
